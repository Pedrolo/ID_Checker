<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/labelDesde"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/movimientos.fecha_desde" />

    <DatePicker
        android:id="@+id/fechaDesde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/labelHasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movimientos.fecha_hasta" />

    <DatePicker
        android:id="@+id/fechaHasta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/botBuscar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/movimientos.consultar"/>

</LinearLayout>