<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pedrolo.idChecker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:debuggable="false">
        <activity
            android:label="@string/app_name"
            android:name=".LoginActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuPrincipalActivity">
            <intent-filter>
				<category
					android:name="android.intent.category.DEFAULT" />
				<action
					android:name="pedrolo.idChecker.MENU_PRINCIPAL" />
			</intent-filter>
        </activity>
        <activity android:name=".SaldoActivity">
            <intent-filter>
				<category
					android:name="android.intent.category.DEFAULT" />
				<action
					android:name="pedrolo.idChecker.SALDO" />
			</intent-filter>
        </activity>
        <activity android:name=".MovimientosActivity">
            <intent-filter>
				<category
					android:name="android.intent.category.DEFAULT" />
				<action
					android:name="pedrolo.idChecker.MOVIMIENTOS" />
			</intent-filter>
        </activity>
    </application>

</manifest>